<Page xmlns="http://schemas.nativescript.org/tns.xsd"
        xmlns:gcp="components/gradient-color-picker"
        shownModally="onShownModally">
    <StackLayout orientation="vertical" class="view-container">
        <Label class="title" text="Choisissez une robe" />
        <gcp:GradientColorPicker
            startingColor="#FDF3C2"
            endingColor="#F0C636"
            colorsCount="20"
            selectedColor="{{selectedColor}}"
            visibility="{{ wineTasting.wineType.code === 'WHITE' ? 'visible' : 'collapsed' }}" />
        <gcp:GradientColorPicker
            startingColor="#F7C7B1"
            endingColor="#BF3E2B"
            colorsCount="20"
            selectedColor="{{selectedColor}}"
            visibility="{{ wineTasting.wineType.code === 'ROSE' ? 'visible' : 'collapsed' }}" />
        <gcp:GradientColorPicker
            startingColor="#C23311"
            endingColor="#3B022D"
            colorsCount="20"
            selectedColor="{{selectedColor}}"
            visibility="{{ wineTasting.wineType.code === 'RED' ? 'visible' : 'collapsed' }}" />
    </StackLayout>
</Page>