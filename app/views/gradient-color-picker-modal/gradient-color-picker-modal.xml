<Page xmlns="http://schemas.nativescript.org/tns.xsd"
        xmlns:gcp="components/gradient-color-picker"
        shownModally="onShownModally">
    <StackLayout orientation="vertical">
        <Label style="font-size: 20" text="DÃ©finir une nuance :" />
        <gcp:GradientColorPicker
            startingColor="#FDF3C2"
            endingColor="#F0C636"
            colorsCount="20"
            selectedColor="{{selectedColor}}"
            visibility="{{ wineTasting.wineType === 0 ? 'visible' : 'collapsed' }}"
            style="horizontal-alignment: center; vertical-alignment: center" />
        <gcp:GradientColorPicker
            startingColor="#F7C7B1"
            endingColor="#BF3E2B"
            colorsCount="20"
            selectedColor="{{selectedColor}}"
            visibility="{{ wineTasting.wineType === 1 ? 'visible' : 'collapsed' }}"
            style="horizontal-alignment: center; vertical-alignment: center" />
        <gcp:GradientColorPicker
            startingColor="#3B022D"
            endingColor="#C23311"
            colorsCount="20"
            selectedColor="{{selectedColor}}"
            visibility="{{ wineTasting.wineType === 2 ? 'visible' : 'collapsed' }}"
            style="horizontal-alignment: center; vertical-alignment: center" />
    </StackLayout>
</Page>