<Page xmlns="http://schemas.nativescript.org/tns.xsd"
      shownModally="onShownModally">
  <GridLayout rows="*, auto"
              columns="*,*">
    <Image src="{{ src }}"
           style="margin: 6"
           colspan="2" />
    <Label text="SUPPRIMER"
           style="color: red;font-weight: bold;margin: 6;padding: 6;horizontal-align:center"
           row="1"
           tap="deletePicture" />
    <Label text="FERMER"
           style="font-weight: bold;horizontal-align:center;margin: 6;padding: 6"
           col="1"
           row="1"
           tap="closeModal" />
  </GridLayout>
</Page>