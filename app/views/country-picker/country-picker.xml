<Page xmlns="http://schemas.nativescript.org/tns.xsd"
        shownModally="onShownModally">
    <GridLayout rows="auto, *">
        <Label class="title" text="SÃ©lectionnez un pays" />
        <ListView items="{{ geoData }}" row="1">
            <ListView.itemTemplate>
                <GridLayout rows="auto, auto">
                    <GridLayout columns="auto,*,24" class="{{ isExpanded ? 'list-item expanded-item' : 'list-item' }}" tap="onToggleArea">
                        <Label text="&#xe908;" class="winenjoy-icon" />
                        <Label text="{{ value.label }}" col="1" />
                        <Label text="&#xE5CF;" class="material-icon" col="2" visibility="{{ isExpanded ? 'collapse' : 'visible' }}" />
                        <Label text="&#xE5CE;" class="material-icon" col="2" visibility="{{ isExpanded ? 'visible' : 'collapse' }}" />
                    </GridLayout>
                    <ListView class="countries-list" itemTap="onSelectCountry" items="{{ value.values }}" separatorColor="transparent" row="1" height="{{ value.values.length * 55 }}" visibility="{{ isExpanded ? 'visible' : 'collapse' }}">
                        <ListView.itemTemplate>
                            <GridLayout class="list-item">
                                <Label text="{{ label }}" />
                            </GridLayout>
                        </ListView.itemTemplate>
                </ListView>
                </GridLayout>
            </ListView.itemTemplate>
        </ListView>
    </GridLayout>
</Page>