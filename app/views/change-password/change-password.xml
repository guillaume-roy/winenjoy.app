<Page xmlns="http://schemas.nativescript.org/tns.xsd"
      navigatedTo="navigatedTo"
      actionBarHidden="true">
  <StackLayout>
        <TextField id="email" hint="Email" keyboardType="email" text="{{ email }}" />
        <TextField hint="Ancien mot de passe" secure="true" text="{{ oldPassword }}" />
        <TextField hint="Nouveau mot de passe" secure="true" text="{{ newPassword }}" />
        <Button text="Valider" class="modal-button accent-button" tap="onChangePassword" isEnabled="{{ canSubmit }}" />
  </StackLayout>
</Page>
