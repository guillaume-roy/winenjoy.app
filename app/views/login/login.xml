<Page xmlns="http://schemas.nativescript.org/tns.xsd"
      navigatedTo="navigatedTo">
    <Page.actionBar>
        <ActionBar title="Winenjoy - v0.1 beta" />
    </Page.actionBar>
  <GridLayout>
    <ScrollView>
        <StackLayout style="padding: 8">
            <Label text="Bienvenue dans l'application Winenjoy !"  textWrap="true" style="font-size: 20; horizontal-align: center; color: #212121;margin-top:16" />
            <Label text="Nous sommes en phase de beta-test."  textWrap="true" style="font-size: 18; horizontal-align: center;margin-top:16" />
            <Label text="Votre avis nous intéresse !"  textWrap="true" style="font-size: 18; horizontal-align: center;margin-top:16; color: #212121" />
            <Label text="Si vous rencontrez des difficultés au cours de l'utilisation de l'application ou si vous avez des idées, des remarques, des critiques, n'hésitez pas à nous envoyer un mail."  textWrap="true" style="font-size: 18; horizontal-align: center;margin-top:16" />
            <Label text="Afin d'obtenir votre accès, merci d'indiquer votre email ci-dessous." textWrap="true" style="font-size: 16; horizontal-align: center;margin-top:16" />
            <TextField text="{{ email }}" hint="Entrez votre email" style="margin-top:16" id="login-field" keyboardType="email" />
            <Button text="Connexion" tap="onLogin" backgroundColor="{{ email && email.length != 0 ? '#FFC107': ''}}" isEnabled="{{ email && email.length != 0 && !isBusy }}" height="64" style="margin-top:16;color:#FFFFFF" />
        </StackLayout>
    </ScrollView>
    <ActivityIndicator busy="{{ isBusy }}" />
  </GridLayout>
</Page>
