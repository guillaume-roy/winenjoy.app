<Page xmlns="http://schemas.nativescript.org/tns.xsd" xmlns:dd="nativescript-drop-down" navigatedTo="navigatedTo" loaded="loaded">
  <Page.actionBar>
    <ActionBar title="Nouvelle dégustation">
      <NavigationButton icon="res://ic_close_white_24dp" tap="cancel"/>
    </ActionBar>
  </Page.actionBar>
  <TabView selectedColor="#FFFFFF">
   <TabView.items>
     <TabViewItem title="Vin">
       <TabViewItem.view>
        <ScrollView>
          <StackLayout class="tab-view-content">
            <TextField text="{{ wineTasting.name }}" hint="Nom du vin" class="form-item" style="font-size: 13;" />
            <TextField text="{{ wineTasting.estate }}" hint="Domaine" class="form-item" style="font-size: 13" />
            <TextField text="{{ wineTasting.cuvee }}" hint="Cuvée" class="form-item" style="font-size: 13" />
            <TextField text="{{ wineTasting.country }}" hint="Pays" class="form-item" style="font-size: 13" />
            <TextField text="{{ wineTasting.region }}" hint="Région" class="form-item" style="font-size: 13" />
            <GridLayout columns="*,*,*,*" class="form-item" style="padding-left: 6">
                <Label text="Année" />
                <dd:DropDown col="1" items="{{ yearsSelection }}" selectedIndex="{{ yearSelectedIndex }}" />
                <Label text="Couleur" col="2" style="padding-left: 6" />
                <dd:DropDown col="3" items="{{ wineTypesSelection }}" selectedIndex="{{ wineTypeSelectedIndex }}" />
            </GridLayout>
            <GridLayout columns="100, *" style="padding-left: 6">
                <StackLayout orientation="horizontal" style="vertical-align: center;">
                    <Label text="{{ alcoholValue }}" />
                    <Label text="% Alcool" />
                </StackLayout>
                <Slider id="alcohol-slider" value="{{ alcoholValue }}" minValue="0" maxValue="100" col="1" />
            </GridLayout>
            <GridLayout class="form-item" style="padding-left: 6">
                <Label text="Biologique" style="vertical-align: center;horizontal-align: left" width="100" />
                <Switch checked="{{ wineTasting.isBiologic }}" style="horizontal-align: right;" />
            </GridLayout>
            <GridLayout class="form-item" style="padding-left: 6">
                <Label text="Biodynamique" style="vertical-align: center;horizontal-align: left" width="100" />
                <Switch checked="{{ wineTasting.isBiodynamic }}" style="horizontal-align: right;" />
            </GridLayout>
            <GridLayout class="form-item" columns="auto, *" style="padding-left: 6">
                <Label text="Cépages" style="vertical-align: center;horizontal-align: left" width="100" />
                <TextField hint="Ajouter un cépage" col="1" />
            </GridLayout>
            <TextView hint="Notes" />
           </StackLayout>
          </ScrollView>
       </TabViewItem.view>
     </TabViewItem>
     <TabViewItem title="Aspect">
       <TabViewItem.view>
          <Label text="Aspect" />
       </TabViewItem.view>
     </TabViewItem>
     <TabViewItem title="Arômes">
       <TabViewItem.view>
          <Label text="Arômes" />
       </TabViewItem.view>
     </TabViewItem>
     <TabViewItem title="Saveurs">
       <TabViewItem.view>
          <Label text="Saveurs" />
       </TabViewItem.view>
     </TabViewItem>
     <TabViewItem title="Synthèse">
       <TabViewItem.view>
          <Label text="Synthèse" />
       </TabViewItem.view>
     </TabViewItem>
   </TabView.items>
 </TabView>
</Page>
