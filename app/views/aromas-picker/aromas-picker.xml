<Page xmlns="http://schemas.nativescript.org/tns.xsd"
        shownModally="onShownModally">
    <GridLayout rows="auto, *, auto">
        <SearchBar hint="Rechercher un arôme" id="searchBar" />
        <ListView items="{{ aromaCriterias }}" itemTap="onSelectAroma" row="1">
            <ListView.itemTemplate>
                <GridLayout style="height:48;font-size:16;color:#212121;padding:16">
                    <Label text="{{ aroma.label }}" />
                    <Label text="✓" visibility="{{ isSelected ? 'visible' : 'collapsed' }}" style="horizontal-align: right" />
                </GridLayout>
            </ListView.itemTemplate>
        </ListView>
        <Button text="Valider" row="2" tap="onValidate" />
    </GridLayout>
</Page>