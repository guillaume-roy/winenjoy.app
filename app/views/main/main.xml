<Page xmlns="http://schemas.nativescript.org/tns.xsd"
      xmlns:FAB="nativescript-floatingactionbutton"
      navigatedTo="navigatedTo">
  <GridLayout rows="*, auto">
    <!--<GridLayout visibility="{{ tastings.length < 1 ? 'visible' : 'collapse' }}">
        <Label text="Aucune dÃ©gustation ... pour l'instant"
            style="font-size: 16;color: #727272;horizontal-align:center;vertical-align:center;" />
    </GridLayout>-->
    <ListView items="{{ tastings }}" itemTap="onViewTasting">
        <ListView.itemTemplate>
            <GridLayout class="list-item" rows="*,*,*" columns="56, *, auto">
                <StackLayout backgroundColor="{{ color }}" class="list-item-icon" rowSpan="3" />
                <Label text="{{ cuvee }}" class="list-item-title" col="1" />
                <Label text="{{ year + ' - ' + estate }}" class="list-item-secondary" row="1" col="1" />
                <Label text="{{ region + ' - ' + country }}" class="list-item-secondary" row="2" col="1" />
                <Image src="{{ finalRating | finalRatingToImageConverter }}" col="2" rowspan="3" height="16" width="16" />
            </GridLayout>
        </ListView.itemTemplate>
    </ListView>
    <FAB:fab row="1"
        tap="onCreateNewTasting"
        icon="res://ic_add_white_24dp"
        rippleColor="#f1f1f1"
        class="fab-button" />
  </GridLayout>
</Page>
