                  class="stat-section"
                  visibility="{{ tastingsByRegion.length !== 0 ? 'visible' : 'collapse' }}">
          <Repeater.itemTemplate>
            <DockLayout>
              <Label text="{{ label }}"
                     class="stat-label"/>
              <Label text="{{ total }}"
                     class="stat-value"
                     style="horizontal-align:right"/>
            </DockLayout>
          </Repeater.itemTemplate>
        </Repeater>
        
        <Label text="Dégustations par AOC :"
               class="label-section"
               visibility="{{ tastingsByAoc.length !== 0 ? 'visible' : 'collapse' }}" />
